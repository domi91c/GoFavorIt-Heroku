<% @conversations.each do |conversation| %>
    <br>
    <% if conversation.originator != current_user  %>
        <%= conversation.originator.email %>
    <%= link_to conversation.id, reply_conversation_path(conversation.id) %>
    <%= link_to conversation.subject %>
    <!--<%= link_to conversation.messages %>-->

    <%= conversation.updated_at.strftime("%a, %m/%e/%Y %I:%M %p") %>

    <%= link_to "Reply", {:controller => "messages", :action => "reply", :id => conversation.id}, :title=> "Reply" %>

    <%= link_to "Move to Trash", {:controller => "conversations", :action => "trash", :id => conversation.id}, :title=> "Move to Trash", :method=>'post' %>

<% end %>
<% end  %>
